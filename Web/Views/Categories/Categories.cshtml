@model Shop_T.Models.CategoriesViewModel 
@{
    ViewData["Title"] = "Categories";
  
}
<!-- Page Content -->
<!-- section: works -->
    <div id="container">
        <section id="works" class="section">
            <div class="container clearfix">
                <h4>Our T-Shirts by Categories</h4>
                <!-- portfolio filter -->
                <div class="row">
                    <div id="filters" class="span12">
                        <ul class="clearfix">
                            <li>
                                <a href="#" data-filter="*" class="active">
                                    <h5>All</h5>
                                </a>
                            </li>

                            <li>
                                <a href="#" data-filter=@Model.ClassName>
                                    <h5>@Model.Name</h5>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END PORTFOLIO FILTERING -->
                </div>




                <!-- product-item item -->
                <!-- product-item item -->

                <div class="row">
                    <div id="product-item-wrap">
                        <div class="col-sm-6 col-md-4 col-lg-3 print game-of-thrones">
                            <!-- portfolio item -->
                            <div class="product-item-item grid">
                                <div class="product-item">
                                    <a href="~/img/works/big.jpg" data-pretty="prettyPhoto[gallery1]" class="product-item-image">
                                        <img src="~/img/works/@Model.Picture" alt="" />
                                        <div class="product-item-overlay">
                                            <div class="thumb-info">
                                                <h5>@Model.Name</h5>
                                                <i class="icon-edit-sign icon-2x"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- end portfolio item -->
                        <div class="col-sm-6 col-md-4 col-lg-3 print alabala">
                            <!-- portfolio item -->
                            <div class="product-item-item grid">
                                <div class="product-item">
                                    <a href="~/img/works/big.jpg" data-pretty="prettyPhoto[gallery1]" class="product-item-image">
                                        <img src="~/img/works/@Model.Picture" alt="" />
                                        <div class="product-item-overlay">
                                            <div class="thumb-info">
                                                <h5>@Model.Name</h5>
                                                <i class="icon-edit-sign icon-2x"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
</section>
        <div class="push"></div>
    </div>

<!-- /.container -->
