@using TShirtShop.Services.Data;

    @{

        IEnumerable<ProductDto> products = ViewData["ProductDto"] as IEnumerable<ProductDto>;
        IEnumerable<TagDto> tags = ViewData["TagDto"] as IEnumerable<TagDto>;
    }
    <!-- Page Content -->
    <!-- section: works -->

    <div id="container">
        <section id="works" class="section">
            <div class="container clearfix">
                <h4>Our T-Shirts by Categories</h4>
                <!-- portfolio filter -->
               

                    <div class="row">
                        <div id="filters" class="span12">
                            <ul class="clearfix">
                                <li>
                                    <a href="#" data-filter="*" class="active">
                                        <h5>All</h5>
                                    </a>
                                </li>
                                @foreach (var item in tags)
                                {
                                    <li>
                                        <a href="#" data-filter=".@item.Name">
                                            <h5>@item.Name</h5>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                        <!-- END PORTFOLIO FILTERING -->
                    </div>
               



                <!-- product-item item -->
                <!-- product-item item -->
                   
                        <div class="row">
                            <div id="product-item-wrap">
                                @foreach (var item in products)
                                {
                                    <div class="col-sm-6 col-md-4 col-lg-3 print @item.Class">

                                        <div class="hovereffect">
                                            <img class="img-fluid" src="ViewProductCategory/@item.PictureId" alt="">
                                            <div class="overlay">
                                                <h2>@item.Name</h2>
                                                <a class="info" asp-controller="Products" asp-action="Item" asp-route-id="@item.Id">Click me for more info!</a>
                                            </div>
                                        </div>

                                    </div>

                                }

                                <!-- portfolio item -->

                            
                            <!-- end portfolio item -->

                        </div>
                    </div>
            </div>
        </section>

        <div class="push"></div>
    </div>

    <!-- /.container -->
